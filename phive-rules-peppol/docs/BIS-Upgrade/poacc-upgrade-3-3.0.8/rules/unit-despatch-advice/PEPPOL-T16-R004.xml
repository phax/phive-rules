<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0"
	configuration="peppolbis-t16-base-3.0">
	<assert>
		<description>Verify each line has a name</description>
		<scope>PEPPOL-T16-R004</scope>
	</assert>
	<test>
		<assert>
			<success>PEPPOL-T16-R004</success>
		</assert>
		<DespatchAdvice xmlns="urn:oasis:names:specification:ubl:schema:xsd:DespatchAdvice-2" xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2" xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2">
			<cac:DespatchLine>
				<cbc:ID>1</cbc:ID>
				<cac:Item>
					<cbc:Name>Item123</cbc:Name>
				</cac:Item>
			</cac:DespatchLine>
		</DespatchAdvice>
	</test>
	
	<test>
		<assert>
			<error>PEPPOL-T16-R004</error>
		</assert>
		<DespatchAdvice xmlns="urn:oasis:names:specification:ubl:schema:xsd:DespatchAdvice-2" xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2" xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2">
			<cac:DespatchLine>
				<cbc:ID>1</cbc:ID>
				<cac:Item>
				</cac:Item>
			</cac:DespatchLine>
		</DespatchAdvice>
	</test>

</testSet>
