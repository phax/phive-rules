<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0" configuration="peppolbis-t76-base-3.0">
	<assert>
		<description>Verify that if a delivery period has a start date and an end date, the end date
			is equal to, or later than the start date </description>
		<scope>PEPPOL-T76-R004</scope>
	</assert>
	<test>
		<assert>

			<success>PEPPOL-T76-R004</success>

		</assert>
		<OrderResponse
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderResponse-2">

			<cac:PromisedDeliveryPeriod>
				<cbc:StartDate>2013-06-01</cbc:StartDate>
				<cbc:EndDate>2013-06-01</cbc:EndDate>
			</cac:PromisedDeliveryPeriod>


			<cac:OrderLine>
				<cac:LineItem>

					<cac:Delivery>
						<cac:PromisedDeliveryPeriod>
							<cbc:StartDate>2013-07-15</cbc:StartDate>
							<cbc:EndDate>2013-07-15</cbc:EndDate>
						</cac:PromisedDeliveryPeriod>
					</cac:Delivery>
				</cac:LineItem>
			</cac:OrderLine>
		</OrderResponse>
	</test>

	<test>
		<assert>
			<success>PEPPOL-T76-R004</success>
		</assert>
		<OrderResponse
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderResponse-2">

			<cac:PromisedDeliveryPeriod>
				<cbc:StartDate>2013-06-01</cbc:StartDate>
				<cbc:EndDate>2013-08-01</cbc:EndDate>
			</cac:PromisedDeliveryPeriod>
			
			<cac:OrderLine>
				<cac:LineItem>
					<cac:Delivery>
						<cac:PromisedDeliveryPeriod>
							<cbc:StartDate>2013-07-15</cbc:StartDate>
							<cbc:EndDate>2014-07-15</cbc:EndDate>
						</cac:PromisedDeliveryPeriod>
					</cac:Delivery>
				</cac:LineItem>
			</cac:OrderLine>
			
		</OrderResponse>
	</test>
	
	<test>
		<assert>
			<success>PEPPOL-T76-R004</success>
		</assert>
		<OrderResponse
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderResponse-2">
			
			<cac:PromisedDeliveryPeriod>
				<cbc:StartDate>2013-06-01</cbc:StartDate>
<!--				<cbc:EndDate>2013-08-01</cbc:EndDate>-->
			</cac:PromisedDeliveryPeriod>
			
			<cac:OrderLine>
				<cac:LineItem>
					<cac:Delivery>
						<cac:PromisedDeliveryPeriod>
<!--							<cbc:StartDate>2013-07-15</cbc:StartDate>-->
							<cbc:EndDate>2014-07-15</cbc:EndDate>
						</cac:PromisedDeliveryPeriod>
					</cac:Delivery>
				</cac:LineItem>
			</cac:OrderLine>
			
		</OrderResponse>
	</test>

	<test>
		<assert>

			<error number="2">PEPPOL-T76-R004</error>
		</assert>
		<OrderResponse
			xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderResponse-2">


			<cac:PromisedDeliveryPeriod>
				<cbc:StartDate>2013-06-01</cbc:StartDate>
				<cbc:EndDate>2013-05-01</cbc:EndDate>
			</cac:PromisedDeliveryPeriod>
			<cac:OrderLine>
				<cac:LineItem>
					
					<cac:Delivery>
						<cac:PromisedDeliveryPeriod>
							<cbc:StartDate>2013-07-15</cbc:StartDate>
							<cbc:EndDate>2013-06-14</cbc:EndDate>
						</cac:PromisedDeliveryPeriod>
					</cac:Delivery>
				</cac:LineItem>
			</cac:OrderLine>
		</OrderResponse>
	</test>


</testSet>
