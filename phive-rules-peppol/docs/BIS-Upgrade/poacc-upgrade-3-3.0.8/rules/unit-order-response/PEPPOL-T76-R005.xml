<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0"
	configuration="peppolbis-t76-base-3.0">
	<assert>
		<description>Verify currencyID has same value as DocumentCurrencyCode.</description>
		<scope>PEPPOL-T76-R005</scope>
	</assert>
	
	<test>
		
	<assert>		
		<success>PEPPOL-T76-R005</success>
	</assert>
		
		<OrderResponse xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderResponse-2">
			
			<cbc:DocumentCurrencyCode>EUR</cbc:DocumentCurrencyCode>
			
			<cac:OrderLine>
				<cac:LineItem>
					<cac:Price>
						<cbc:PriceAmount currencyID="EUR"/>
					</cac:Price>
				</cac:LineItem>
			</cac:OrderLine>
			
		</OrderResponse>
	</test>
	
	<test>
		<assert>		
			<error>PEPPOL-T76-R005</error>
		</assert>
		<OrderResponse xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:OrderResponse-2">
			
			<cbc:DocumentCurrencyCode>NOK</cbc:DocumentCurrencyCode>
			
			<cac:OrderLine>
				<cac:LineItem>
					<cac:Price>
						<cbc:PriceAmount currencyID="EUR"/>
					</cac:Price>
				</cac:LineItem>
			</cac:OrderLine>
			
		</OrderResponse>
	</test>


	

	
</testSet>
