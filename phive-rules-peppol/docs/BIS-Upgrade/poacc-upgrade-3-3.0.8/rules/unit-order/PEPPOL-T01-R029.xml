<?xml version="1.0" encoding="UTF-8"?>
<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0" configuration="peppolbis-t01-base-3.0">
	<assert>
		<scope>PEPPOL-T01-R029</scope>
		<description>Verify that all TaxCategories have a VAT rate, except if the order is not
			subject to VAT.</description>
	</assert>
	<test id="1">
		<assert>
			<success>PEPPOL-T01-R029</success>
		</assert>
		<Order xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Order-2">

			<cac:AllowanceCharge>
				<cac:TaxCategory>
					<cbc:ID>S </cbc:ID>
					<cbc:Percent>25</cbc:Percent>
					<cac:TaxScheme>
						<cbc:ID>VAT</cbc:ID>
					</cac:TaxScheme>
				</cac:TaxCategory>
			</cac:AllowanceCharge>

			<cac:OrderLine>
				<cac:LineItem>
					<cac:Item>
						<cac:ClassifiedTaxCategory>
							<cbc:ID>S</cbc:ID>
							<cbc:Percent>25</cbc:Percent>
							<cac:TaxScheme>
								<cbc:ID>VAT</cbc:ID>
							</cac:TaxScheme>
						</cac:ClassifiedTaxCategory>
					</cac:Item>
				</cac:LineItem>
			</cac:OrderLine>


		</Order>
	</test>


	<test id="2">
		<assert>
			<success>PEPPOL-T01-R029</success>
		</assert>
		<Order xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Order-2">

			<cac:AllowanceCharge>
				<cac:TaxCategory>
					<cbc:ID>O</cbc:ID>
<!--					<cbc:Percent>25</cbc:Percent>-->
					<cac:TaxScheme>
						<cbc:ID>VAT</cbc:ID>
					</cac:TaxScheme>
				</cac:TaxCategory>
			</cac:AllowanceCharge>

			<cac:OrderLine>
				<cac:LineItem>
					<cac:Item>
						<cac:ClassifiedTaxCategory>
							<cbc:ID> O</cbc:ID>
<!--							<cbc:Percent>25</cbc:Percent>-->
							<cac:TaxScheme>
								<cbc:ID>VAT</cbc:ID>
							</cac:TaxScheme>
						</cac:ClassifiedTaxCategory>
					</cac:Item>
				</cac:LineItem>
			</cac:OrderLine>


		</Order>
	</test>
	
	<test id="3">
		<assert>
			<error number="2">PEPPOL-T01-R029</error>
		</assert>
		<Order xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
			xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
			xmlns="urn:oasis:names:specification:ubl:schema:xsd:Order-2">
			
			<cac:AllowanceCharge>
				<cac:TaxCategory>
					<cbc:ID>S</cbc:ID>
					<!-- <cbc:Percent>25</cbc:Percent>-->
					<cac:TaxScheme>
						<cbc:ID>VAT</cbc:ID>
					</cac:TaxScheme>
				</cac:TaxCategory>
			</cac:AllowanceCharge>
			
			<cac:OrderLine>
				<cac:LineItem>
					<cac:Item>
						<cac:ClassifiedTaxCategory>
							<cbc:ID> AE </cbc:ID>
							<!-- <cbc:Percent>25</cbc:Percent>-->
							<cac:TaxScheme>
								<cbc:ID>VAT</cbc:ID>
							</cac:TaxScheme>
						</cac:ClassifiedTaxCategory>
					</cac:Item>
				</cac:LineItem>
			</cac:OrderLine>
			
			
		</Order>
	</test>


</testSet>
